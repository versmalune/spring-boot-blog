<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo1.user.mapper.UserMapper">
    <insert id="saveUser" parameterType="com.example.demo1.user.dto.UserDto">
        <![CDATA[
        INSERT INTO users (username, userid, userpw, userauth)
        VALUES (#{userName}, #{userId}, #{userPw}, #{userAuth})
        ]]>
    </insert>
    <select id="getUserAccount" resultType="com.example.demo1.user.dto.UserDto">
            <![CDATA[
            SELECT * FROM users
            WHERE userid = #{userId}
            ]]>
    </select>
</mapper>