<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo1.board.mapper.BoardMapper">
    <select id="selectBoardList" resultType="com.example.demo1.board.dto.BoardDto">
        <![CDATA[
			SELECT bidx, title, viewcnt
		    FROM board
		    ORDER BY bidx DESC
		]]>
    </select>
    <select id="selectBoardFileList" parameterType="int" resultType="com.example.demo1.board.dto.BoardFileDto">
        <![CDATA[
        SELECT fidx, bidx, original_file_name,
            FORMAT(ROUND(file_size / 1024), 0) AS file_size
        FROM
            files
        WHERE
            bidx = #{bidx}
        ]]>
    </select>
    <insert id="insertBoard" parameterType="com.example.demo1.board.dto.BoardDto" useGeneratedKeys="true" keyProperty="bidx">
		<![CDATA[
        INSERT INTO board (title, content)
        VALUES (#{title}, #{content})
        ]]>
	</insert>
    <insert id="insertBoardFileList" parameterType="com.example.demo1.board.dto.BoardFileDto">
        <![CDATA[
			INSERT INTO files
			(bidx, original_file_name, stored_file_path, file_size, creator_id)
			VALUES
		]]>
        <foreach collection="list" item="item" separator=",">
            (
            #{item.bidx},
            #{item.originalFileName},
            #{item.storedFilePath},
            #{item.fileSize},
            'USER'
            )
        </foreach>
    </insert>
    <update id="updateHitCount" parameterType="int">
        <![CDATA[
        UPDATE board
        SET viewcnt = viewcnt+1
        WHERE bidx = #{bidx}
        ]]>
    </update>

    <select id="selectBoardDetail" parameterType="int" resultType="com.example.demo1.board.dto.BoardDto">
        <![CDATA[
        SELECT bidx, title, content, viewcnt
        FROM board
        WHERE bidx = #{bidx}
        ]]>
    </select>

    <update id="updateBoard" parameterType="com.example.demo1.board.dto.BoardDto">
        <![CDATA[
        UPDATE board
        SET content = #{content}
        WHERE bidx = #{bidx}
        ]]>
    </update>

    <delete id="deleteBoard" parameterType="int">
        <![CDATA[
        DELETE FROM board
        WHERE bidx = #{bidx}
        ]]>
    </delete>


</mapper>